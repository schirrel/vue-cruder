{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "webpack-env",
      "jest"
    ],
    "baseUrl": "./",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "esnext"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "paths": {
    "@vue-cruder/core": ["packages/core/src/index.ts"],
    "@vue-cruder/ui": ["packages/ui/src/main.ts"]
  }
}