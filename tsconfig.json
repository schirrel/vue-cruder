{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "webpack-env",
      "jest"
    ],
    "baseUrl": "./packages",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}